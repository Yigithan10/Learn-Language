    <ImageButton
        android:id="@+id/btnImageMenuNavigation"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_background"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/navigation" />

    <TextView
        android:id="@+id/txtViewMenuNavigation"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/engMenuNavigation"
        android:textColor="@color/color5"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnImageMenuNavigation"
        app:layout_constraintEnd_toEndOf="@+id/btnImageMenuNavigation"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnImageMenuNavigation"
        app:layout_constraintTop_toTopOf="@+id/btnImageMenuNavigation"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnImageMenuAirport"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_background"
        android:scaleType="fitStart"
        android:contextClickable="true"
        app:layout_constraintEnd_toStartOf="@+id/btnImageMenuHotel"
        app:layout_constraintStart_toEndOf="@+id/btnImageMenuNavigation"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/airport" />

    <TextView
        android:id="@+id/txtViewMenuAirport"
